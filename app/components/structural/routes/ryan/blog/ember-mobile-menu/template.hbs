<div local-class="blog_component_container">
  {{#if (or (media 'isLarge') (media 'isWide'))}}
    <section local-class="blog_side_bar_container">
      <Structural::Ui::Navigation::Desktop 
        @routeSlotOne={{this.routeSlotOne}}
        @routeSlotTwo={{this.routeSlotTwo}}
        @routeSlotThree={{this.routeSlotThree}}
        @routeLabelSlotOne={{this.routeLabelSlotOne}}
        @routeLabelSlotTwo={{this.routeLabelSlotTwo}}
        @routeLabelSlotThree={{this.routeLabelSlotThree}} />
    </section>
  {{/if}}
  <section local-class="blog_content_container">
    <div local-class="blog_section_container grey">
      <Dynamic::Article
        @paragraphOne={{this.paragraphOne}}
        @paragraphTwo={{this.paragraphTwo}}
        @paragraphThree={{this.paragraphThree}}
        @paragraphFour={{this.paragraphFour}}
        @imageOne={{this.imageOne}} />
    </div>
  </section>
</div>